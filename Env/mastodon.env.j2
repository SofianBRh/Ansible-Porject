# Mastodon Environment Variables

# Instance URL
LOCAL_DOMAIN={{ mastodon_domain }}

# Application secret key
SECRET_KEY_BASE={{ mastodon_secret_key_base }}

# PostgreSQL settings
DB_HOST={{ postgres_host }}
DB_USER={{ postgres_user }}
DB_NAME={{ mastodon_db_name }}
DB_PASS={{ postgres_password }}
DB_POOL=10

# Redis settings
REDIS_HOST={{ redis_host }}
REDIS_PORT=6379
REDIS_NAMESPACE=mastodon_production

# Mailer settings
SMTP_SERVER={{ smtp_server }}
SMTP_PORT={{ smtp_port }}
SMTP_LOGIN={{ smtp_username }}
SMTP_PASSWORD={{ smtp_password }}
SMTP_FROM_ADDRESS={{ mastodon_email_from_address }}
SMTP_DOMAIN={{ mastodon_email_from_domain }}

# AWS S3 settings
AWS_ACCESS_KEY_ID={{ s3_access_key }}
AWS_SECRET_ACCESS_KEY={{ s3_secret_key }}
AWS_REGION={{ s3_region }}
AWS_S3_BUCKET_NAME={{ s3_bucket_name }}
AWS_S3_HOST_NAME={{ s3_hostname }}

# Streaming API settings
STREAMING_API_BASE_URL={{ mastodon_domain }}
STREAMING_API_SECRET={{ mastodon_streaming_api_secret }}

# OTP secret
OTP_SECRET={{ mastodon_otp_secret }}
